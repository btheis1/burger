<h1>Eat Dat Burger!</h1>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
               {{id}}. {{burger_name}} 
               <button class="eat-burger" data-id="{{id}}">Devour It!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                {{burger_name}}!
            </li>
        {{/if}}
    {{/each}}
</ul>
<h2> Add a Burger:</h2>
<form class="create-form">
    <div class="form-group">
        <input type="text" id="burger-input" name="burger-name">
    </div>

    <button type="submit" class="new-burger">Add Burger</button>
</form>